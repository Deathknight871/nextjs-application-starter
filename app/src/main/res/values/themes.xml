<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.CarteiraVirtual" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Customize your theme here -->
        <item name="materialButtonStyle">@style/Widget.CarteiraVirtual.Button</item>
        <item name="materialCardViewStyle">@style/Widget.CarteiraVirtual.CardView</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.CarteiraVirtual.MaterialAlertDialog</item>
    </style>

    <!-- Button style -->
    <style name="Widget.CarteiraVirtual.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Card style -->
    <style name="Widget.CarteiraVirtual.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">@color/wallet_card_background</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Alert Dialog style -->
    <style name="ThemeOverlay.CarteiraVirtual.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.CarteiraVirtual.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.CarteiraVirtual.Button.TextButton</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.CarteiraVirtual.AlertDialog.Title</item>
    </style>

    <!-- Text Button style -->
    <style name="Widget.CarteiraVirtual.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Alert Dialog Title style -->
    <style name="TextAppearance.CarteiraVirtual.AlertDialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
</resources>
